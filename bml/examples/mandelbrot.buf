macro complex_mult(a, b) {
    give [a.x * b.x - a.y * b.y, a.x * b.y + a.y * b.x]
}

macro complex_abs(complex) {
    give sqrt(pow(complex.x, 2.0) + pow(complex.y, 2.0))
}

c = coord / resolution
c = [mix(-2, 2, c.x), mix(-1, 1, c.y)] 

z = [0, 0]

abs = 0

n = 0

while abs <= 2, 100 {
    abs = complex_abs(z)
    z = complex_mult(z, z) + c
    n = n + 1
}

col = n / 100
return [col, col, col, 1]